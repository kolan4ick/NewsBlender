<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="320dp"
        android:layout_height="320dp">

    <View
            android:id="@+id/popUpAddNewsResourceBody"
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/ic_waves_popup"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_telegram"
            android:id="@+id/telegramImageView"
            app:layout_constraintTop_toTopOf="@+id/popUpAddNewsResourceBody"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="58dp" />

    <TextView
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:id="@+id/popUpAddNewsResourceTitle"
            android:text="@string/add_your_news_resource"
            app:layout_constraintTop_toBottomOf="@+id/telegramImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="9dp" />

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/add_telegram_link"
            android:ems="10"
            android:background="@drawable/login_input_background"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:id="@+id/popUpAddNewsResourceEditText"
            app:layout_constraintTop_toBottomOf="@+id/popUpAddNewsResourceTitle"
            app:layout_constraintEnd_toEndOf="@+id/popUpAddNewsResourceBody"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" />

    <androidx.appcompat.widget.AppCompatButton
            android:text="@string/add"
            android:layout_width="144dp"
            android:layout_height="25dp"
            android:background="@drawable/blue_button_background"
            android:id="@+id/popUpAddNewsResourceAddButton"
            app:layout_constraintTop_toBottomOf="@+id/popUpAddNewsResourceEditText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" />

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/popUpAddNewsResourceCloseButton"
            android:background="@drawable/ic_cancel_cross"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp" />
</androidx.constraintlayout.widget.ConstraintLayout>